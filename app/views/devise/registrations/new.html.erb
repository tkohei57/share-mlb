<%= render "shared/second-header" %>

<div class="registration">
  <div class="registration-headline">
    新規登録
  </div>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="forms">
      <%= image_tag("baseball_logo.png", class:"baseball-logo-img") %>
      <div class="form-right">
        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">ユーザー名</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form", placeholder: "例) MLB 太郎" %>
        </div>

        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.email_field :email, autocomplete: "email", class: "form", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "form", placeholder: "半角英数字混合で6文字以上" %>
        </div>

        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード(確認)</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form", placeholder: "パスワード(確認)" %>
        </div>

        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">お気に入りチーム</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:favorite_team_id, FavoriteTeam.all, :id, :name, {}, {id:"item-category", class: "form"}) %>
        </div>

        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">お気に入り選手</label>
            <span class="any">任意</span>
          </div>
          <%= f.text_field :favorite_player, autocomplete: "favorite_player", class: "form", placeholder: "例) Shohei Ohtani" %>
        </div>

        <%= f.submit "登録する", class: "registration-btn devise-btns"%>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>